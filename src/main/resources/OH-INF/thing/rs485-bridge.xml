		<config-description>
			<parameter name="serialPort" type="text" required="true">
				<context>serial-port</context>
				<label>Com-port name</label>
				<description>Input com-port name</description>
			</parameter>
		</config-description>

	</bridge-type>

</thing:thing-descriptions>
